<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/appointment_card_background"
    android:padding="24dp"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/appointmentImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/appointment_image"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/companyNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appointmentTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Randevu Saati: "
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/appointmentDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Randevu Tarihi: "
            android:textColor="@color/white"
            android:textSize="16sp" />



    </LinearLayout>
</LinearLayout>
