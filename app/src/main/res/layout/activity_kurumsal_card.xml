<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".KurumsalCardActivity">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/profile_image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/companyNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hizmet Seçiniz"
        android:textSize="20sp"
        android:textColor="#888888"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/serviceSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24sp"
        android:entries="@array/service_options"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aracınızı vale hizmeti ile yıkatmak ister misiniz?"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/yesCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evet"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/noCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hayır"
            android:layout_marginStart="16dp"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Randevu Saatleri"
        android:textSize="20sp"
        android:textColor="#888888"
        android:layout_marginBottom="8dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <TextView
            android:id="@+id/timeSlot1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="10:00"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/timeSlot2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="11:00"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/timeSlot3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="12:00"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/timeSlot4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="13:00"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/timeSlot5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="14:00"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/timeSlot6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="15:00"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/timeSlot7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="16:00"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/timeSlot8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="17:00"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/timeSlot9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="18:00"
            android:textSize="20sp"
            android:background="?android:attr/selectableItemBackground" />
    </GridLayout>

    <Button
        android:id="@+id/bookAppointmentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Randevu Oluştur"
        android:textSize="20sp" />
</LinearLayout>
